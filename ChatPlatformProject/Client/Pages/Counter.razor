@page "/Counter"

<PageTitle>Cookie Clicker</PageTitle>

<h1>Cookie Clicker</h1>

<p role="status">Current Cookies: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Get Cookie</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
